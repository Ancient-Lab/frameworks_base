<LinearLayout 
	  android:orientation="horizontal" 
	  android:layout_gravity="@integer/anci_grav_ui"
	  android:layout_width="wrap_content" 
	  android:layout_marginBottom="@integer/expanclock_bottom"
	  android:layout_marginTop="@integer/expanclock_margin"
	  android:layout_height="wrap_content"
	  xmlns:android="http://schemas.android.com/apk/res/android">
        <TextClock 
		  android:textSize="58.0dip" 
		  android:textStyle="bold" 
		  android:textColor="?android:colorAccent" 
		  android:id="@+id/anc_clock_hour" 
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content" 
		  android:format12Hour="hh" 
		  android:format24Hour="HH" />
        <TextClock 
		  android:textSize="28.0dip" 
		  android:textStyle="normal" 
		  android:id="@+id/anc_clock_separator" 
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content" 
		  android:layout_marginLeft="2.0dip" 
		  android:layout_marginRight="2.0dip" 
		  android:format12Hour=":" 
		  android:format24Hour=":" />
        <TextClock 
		  android:textSize="28.0dip" 
		  android:textStyle="normal" 
		  android:id="@+id/anc_clock_minutes" 
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content" 
		  android:format12Hour="mm a" 
		  android:format24Hour="mm" />
</LinearLayout>
