<LinearLayout
	android:theme="@style/QSHeaderTheme" 
	android:orientation="vertical" 
	android:id="@+id/quick_qs_status_icons" 
	android:focusable="true" 
	android:clickable="false" 
	android:clipChildren="false" 
	android:clipToPadding="false" 
	android:layout_width="fill_parent" 
	android:layout_height="@dimen/ancient_headerimg_size" 
	android:layout_marginTop="5.0dip" 
	android:minHeight="20.0dip" 
	android:layout_alignParentTop="true" 
	android:paddingStart="@dimen/status_bar_padding_start" 
	android:paddingEnd="@dimen/status_bar_padding_end"
        xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:systemui="http://schemas.android.com/apk/res-auto">
        <LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="25.0dip">
                <com.android.systemui.statusbar.policy.DateView 
			android:textAppearance="@style/TextAppearance.QS.Status" 
			android:gravity="center_vertical" 
			android:layout_gravity="start|center" 
			android:id="@+id/date" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:singleLine="true" 
			systemui:datePattern="@string/abbrev_wday_month_day_no_year_alarm" />
                        <com.android.systemui.statusbar.phone.StatusIconContainer 
			android:id="@+id/statusIcons" 
			android:layout_width="0.0dip" 
			android:layout_height="fill_parent" 
			android:layout_weight="1.0" 
			android:paddingEnd="@dimen/signal_cluster_battery_padding" />
                        <com.android.systemui.BatteryMeterView 
			android:id="@+id/batteryRemainingIcon" 
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent" 
			android:paddingEnd="2.0dip" 
			systemui:textAppearance="@style/TextAppearance.QS.Status" />
    </LinearLayout>
    <LinearLayout 
		android:gravity="bottom|center" 
		android:layout_gravity="bottom|center" 
		android:orientation="horizontal" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_marginTop="80.0dip" 
		android:layout_alignParentBottom="true">
                <TextClock 
			android:textAppearance="@style/TextAppearance.QS.Status" 
			android:textSize="30.0dip" 
			android:textStyle="bold" 
			android:id="@+id/anci_clock3"
			android:textColor="?android:colorAccent" 
			android:gravity="bottom|center" 
			android:layout_gravity="bottom|center" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_alignParentBottom="true" 
			android:format12Hour="hh" 
			android:format24Hour="HH" />
                        <TextClock 
			android:textAppearance="@style/TextAppearance.QS.Status" 
			android:textSize="10.0dip" 
			android:textStyle="normal" 
			android:id="@+id/anci_clock4"
			android:gravity="bottom|center" 
			android:layout_gravity="bottom|center" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="2.0dip" 
			android:layout_marginRight="2.0dip" 
			android:layout_alignParentBottom="true" 
			android:format12Hour=":" 
			android:format24Hour=":" />
                        <TextClock 
			android:textAppearance="@style/TextAppearance.QS.Status" 
			android:textSize="20.0dip" 
			android:textStyle="normal" 
			android:id="@+id/anci_clock5"
			android:gravity="bottom|center" 
			android:layout_gravity="bottom|center" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_alignParentBottom="true" 
			android:format12Hour="mm a" 
			android:format24Hour="mm" />
    </LinearLayout>

</LinearLayout>
