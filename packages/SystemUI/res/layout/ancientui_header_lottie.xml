<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
  android:layout_gravity="@integer/anci_grav_ui" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" 
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <com.airbnb.lottie.LottieAnimationView 
	  android:layout_gravity="@integer/anci_grav_ui" 
	  android:visibility="@integer/lottie_header" 
	  android:clickable="false" 
	  android:layout_width="@dimen/lottie_header_width" 
	  android:layout_height="@dimen/lottie_header_height" 
	  android:layout_marginTop="@dimen/lottie_header_margin" 
	  android:alpha="@integer/lottie_opacy" 
	  app:lottie_autoPlay="true" 
	  app:lottie_loop="true" 
	  app:lottie_rawRes="@raw/sliding_square" />
  <LinearLayout 
	  android:layout_gravity="@integer/anci_grav_ui" 
	  android:orientation="horizontal" 
	  android:layout_width="wrap_content" 
	  android:layout_height="wrap_content">
    <include 
		  layout="@layout/ancientui_quick_decoration" />
  </LinearLayout>
</FrameLayout>
